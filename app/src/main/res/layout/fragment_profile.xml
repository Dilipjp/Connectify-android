<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_profile_placeholder"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:clipToOutline="true"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop" />

    <!-- User Name -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="User Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <!-- User Bio -->
    <TextView
        android:id="@+id/userBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="User Bio"
        android:textSize="16sp"
        android:layout_marginTop="5dp" />

    <!-- User Email -->
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="user@example.com"
        android:textSize="16sp"
        android:layout_marginTop="5dp" />

    <!-- User Phone -->
    <TextView
        android:id="@+id/userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="+1234567890"
        android:textSize="16sp"
        android:layout_marginTop="5dp" />

    <!-- Inside fragment_profile.xml -->
    <TextView
        android:id="@+id/userWarnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:paddingTop="8dp"/>


    <!-- Stats Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="0 Posts"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/userFollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="0 Followers"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/userFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Following"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black" />
    <!-- All Users Button for admin-->
    <Button
        android:id="@+id/adminUsersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Users"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:backgroundTint="@color/black" />
    <!-- All Users Button for moderator-->
    <Button
        android:id="@+id/usersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Users"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:backgroundTint="@color/black" />
    <!-- All Posts Button -->
    <!--    <Button-->
    <!--        android:id="@+id/postButton"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Posts"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:textColor="@android:color/white"-->
    <!--        android:visibility="gone"-->
    <!--        android:backgroundTint="@color/black" />-->
    <!-- Sign Out Button -->
    <Button
        android:id="@+id/signOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black" />

</LinearLayout>